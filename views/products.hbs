<h1 class="mt-5">熱門商品</h1>
<a href="/cart">購物車</a>
<div class="row">
    <div class="col-md-8">
        <div class="row">
            {{#each products}}
            <div class="col-md-4 mt-3">
                <div class="card" style="height:26rem;">
                    <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
                    <div class="card-body" style="position: relative;">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p>{{this.price}}</p>
                        <form action="/cart" method="POST">
                            <input type='hidden' name="productId" value="{{this.id}}">
                            <button type='submit' class="btn btn-block btn-primary">加入購物車</button>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <div class="col-md-4">

        <div class="card mt-3">
            <div class="card-body" style="position: relative;">
                <h4>購買品項</h4>
                {{#each carts}}
                <div class="row">
                    <div class="col-md-4">
                        <img src="{{this.image}}" style="width:80px; height:70px;">
                    </div>
                    <div class="col-md-8">
                        <p class="">{{this.name}}</p>
                        <p class="">${{this.price}}</p>
                        <div>
                            <form action="/cartItem/{{this.id}}/add" method="post">
                                <input type="hidden" name="{{this.id}}">
                                <button class="btn btn-outline-primary">+</button>
                            </form>
                            <span>{{this.quantity}}</span>
                            <form>
                                <input type="hidden" id="{{this.id}}">
                                <button class="btn btn-outline-primary">-</button>
                            </form>

                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <hr>
        <div class="card">
            <div class="card-body">
                <span class="card-title">Total: ${{total}}</span>
                <a class="btn  btn-primary" href="/cart">Go To Cart</a>
            </div>
        </div>
    </div>

</div>



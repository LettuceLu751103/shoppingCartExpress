<h1 class="mt-5">熱門商品</h1>
<div class="row">
    <div class="col-md-9">
        <div class="row">
            {{#each products}}
            <div class="col-md-4 mt-3">
                <div class="card" style="height:26rem;">
                    <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
                    <div class="card-body" style="position: relative;">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p>{{this.price}}</p>
                        <a class="btn btn-block btn-primary">加入購物車</a>

                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <div class="col-md-3">

        <div class="card mt-3" style="height:15rem;">
            <div class="card-body" style="position: relative;">
                <h4>購買品項</h4>
                <h5 class="card-title">item1</h5>
                <h5 class="card-title">item2</h5>
                <h5 class="card-title">item3</h5>
                <h5 class="card-title">item4</h5>
            </div>
        </div>
        <hr>
        <div class="card" style="height:15rem;">
            <div class="card-body" style="position: relative;">
                <h5 class="card-title">Total: $0</h5>

                <a class="btn  btn-primary" style="position: absolute; bottom:10px;">Go To Cart</a>

            </div>
        </div>
    </div>

</div>


